<% layout("layouts/boilerplate") -%>
<h1 class="text-center mb-4">All Blogs</h1>
<div class="row">
  <div class="col-8 offset-2">
    <%for (let blog of blogs) {%>
    <div class="card mb-3">
      <div class="row">
        <div class="col-4">
          <img
            class="img-thumbnail"
            src="<%=`http://127.0.0.1:3000/${blog.image.replace(/\\/g, '/')}`%>"
            alt="<%=blog.title%>"
          />
        </div>
        <div class="col-8">
          <div class="card-body">
            <h5 class="card-title"><%=blog.title%></h5>
            <p class="card-subtitle"><%=blog.subtitle%></p>
            <a href="/blogs/<%=blog.id%>" class="btn btn-primary mt-4"
              >View blog</a
            >
          </div>
        </div>
      </div>
    </div>
    <%}%>
  </div>
</div>
